<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-6 col-lg-4">
      <div class="card post-card">
        <%= link_to(blog_post_path(post), class: 'text-decoration-none') do %>
          <div class="header-image" style="background-image: url(<%= url_for post.header_image %>)"></div>
          <% if post.header_image.present? %>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= truncate(post.description, length: 250) %></p>
            <%= link_to 'Read Post', blog_post_path(post), class: 'btn btn-light mt-auto' %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
